{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["${workspaceFolder}/scripts/lint.py", "${relativeFile}"],
      "presentation": {
        "clear": true,
        "reveal": "never"
      },
      "problemMatcher": {
        "owner": "python",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(WARNING|ERROR):\\s+\\[(.*?):(\\d+):(\\d+),(\\d+)\\]\\s+(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "column": 4,
          "endColumn": 5,
          "message": 6
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
